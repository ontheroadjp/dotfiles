	public function search(Request $req)
	{
		// パラメータの取得	
		$info = \Request::all();

		// アルバムが存在するかどうか確認（無ければ作成）
		$album = Album::firstOrCreate(array('name'=>$info['kw']));

		// WEB から画像取得(REST API の発行)
		$model = new WebImageSearch();
		$model->setAlbumId($album->id);
		$images = $model->fetch($info);

		// DBへデータ保存
		$results = $model->store($images);

		// View の表示
		return view('you.search', compact('album','results'));

	}


}




