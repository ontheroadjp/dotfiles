
gulp         = require 'gulp'
bower        = require 'main-bower-files'
concat       = require 'gulp-concat'
filter       = require 'gulp-filter'
require('coffee-script/register');
require('./gulpfile.coffee');
 
gulp.task 'BowerJS', ->
	jsFilter = filter '**/*.js'
	gulp
		.src bower()
		.pipe jsFilter
		.pipe concat 'lib.js'
		.pipe gulp.dest 'javascripts/source/'



