	/**
	 * Display the specified resource.
	 *
	 * @param  int  $id
	 * @return Response
	 */
	public function show($id)
	{
	
		$album = Album::find($id);	
		$images = $album->images;
		$trashed = Image::onlyTrashed()->where('album_id', '=', $id)->get();
		return view('you.images', compact('album, images, trashed'));
		//return view('you.images', compact('album','trashed'));
	}

